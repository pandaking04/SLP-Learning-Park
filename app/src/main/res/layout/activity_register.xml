<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/museum">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/foreground_white3">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:background="@color/museum"
            android:scaleType="fitCenter"
            android:src="@drawable/new_back" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/register_profile" />






    <TextView
        android:id="@+id/register_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="สมัครสมาชิก"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/custom_input"
        android:layout_below="@+id/register_text"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:hint="อีเมล" />

    <EditText
        android:id="@+id/register_username"
        android:background="@drawable/custom_input"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/register_email"
        android:layout_marginBottom="20dp"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:hint="ชื่อผู้ใช้" />

    <EditText
        android:id="@+id/register_password"
        android:hint="รหัสผ่าน"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_input"
        android:inputType="textPassword"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/register_username"
        android:layout_width="350dp"
        android:layout_height="60dp"
        />

    <EditText
        android:id="@+id/register_confirm"
        android:hint="ยืนยันรหัสผ่าน"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_input"
        android:inputType="textPassword"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/register_password"
        android:layout_width="350dp"
        android:layout_height="60dp"
        />

    <Button
        android:id="@+id/register"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/register_confirm"
        android:layout_marginBottom="20dp"
        android:text="ยืนยัน"
        android:textSize="18dp"
        android:backgroundTint="@color/museum"/>

    </RelativeLayout>

</RelativeLayout>