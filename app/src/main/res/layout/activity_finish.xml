<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".finish"
    android:background="@drawable/squre_purple"
    >

    <TextView
        android:id="@+id/label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="สิ้นสุด"
        android:layout_centerHorizontal="true"
        android:textSize="45dp"
        android:layout_marginTop="170dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ขอบคุณที่มาเยี่ยมชม\nอุทยานการเรียนรู้ของเรา"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/label1"
        android:textColor="@color/white"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/again_btn"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        android:backgroundTint="@color/museum"
        android:drawableRight="@drawable/ic_return"
        android:paddingRight="30dp"
        android:text="ชมอีกครั้ง"
        android:textSize="19dp" />

    <Button
        android:id="@+id/comment_btn"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_below="@+id/again_btn"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/museum"
        android:drawableRight="@drawable/ic_comment"
        android:paddingRight="30dp"
        android:text="เขียนรีวิว"
        android:textSize="19dp" />

            <Button
                android:id="@+id/home_btn"
                android:layout_below="@+id/comment_btn"
                android:layout_width="200dp"
                android:layout_height="65dp"
                android:backgroundTint="@color/museum"
                android:text="หน้าหลัก"
                android:drawableRight="@drawable/ic_white_home"
                android:paddingRight="30dp"
                android:layout_centerHorizontal="true"
                android:textSize="19dp"/>






</RelativeLayout>