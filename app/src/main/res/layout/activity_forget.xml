<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forget"
    android:background="@color/museum">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/foreground_white3">



    <ImageButton
        android:id="@+id/arrow_register"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/museum"
        android:scaleType="fitCenter"
        android:src="@drawable/new_back" />

    <ImageView
        android:id="@+id/forget_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/forget"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/forget_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/forget_img"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp"
            android:text="ลืมรหัสผ่าน"
            android:textSize="30dp"
            android:textStyle="bold" />



    <EditText
        android:id="@+id/forget_edit"
        android:layout_below="@+id/forget_txt"
        android:padding="8dp"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_input"
        android:hint="อีเมล"
        
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/forget_confirm"
        android:layout_below="@id/forget_edit"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/museum"
        android:textColor="@color/white"
        android:text="ยืนยัน"
        android:textSize="18dp"
        android:layout_marginTop="20dp"/>

    </RelativeLayout>



</RelativeLayout>