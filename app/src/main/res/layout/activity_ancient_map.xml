<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ancient_map"
    android:background="@drawable/background">

    <ImageButton
        android:id="@+id/arrow_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/museum"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_arrow_back_24" />


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:rowCount="2"
        android:columnCount="2">

        <ImageButton android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/zone4"
            android:scaleType="fitCenter"
            android:layout_row="0"
            android:layout_column="0"
            android:background="#00000000"
            android:layout_margin="10sp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="60dp"
            />

        <ImageButton android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/zone3"
            android:scaleType="fitCenter"
            android:layout_row="0"
            android:layout_column="1"
            android:background="#00000000"
            android:layout_margin="10sp"
            android:layout_marginTop="60dp"/>

        <ImageButton android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/zone5"
            android:scaleType="fitCenter"
            android:layout_row="1"
            android:layout_column="0"
            android:background="#00000000"
            android:layout_marginLeft="10sp"
            android:layout_marginBottom="30dp"/>

        <ImageButton android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/zone2"
            android:scaleType="fitCenter"
            android:layout_row="1"
            android:layout_column="1"
            android:background="#00000000"
            android:layout_marginLeft="10sp"
            android:id="@+id/ancient_btn"
            />

        <ImageButton android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/zone6"
            android:scaleType="fitCenter"
            android:layout_row="1"
            android:id="@+id/btn_zone6"
            android:background="#00000000"
            android:layout_marginLeft="10sp"

            />

        <ImageButton android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/zone1"
            android:scaleType="fitCenter"
            android:layout_row="1"
            android:background="#00000000"
            android:layout_marginLeft="10sp"
            android:id="@+id/zone1_btn"

            />



    </GridLayout>
</RelativeLayout>